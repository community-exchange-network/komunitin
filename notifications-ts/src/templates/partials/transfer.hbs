<!-- transfer card -->
<tr>
  <td class="mobile-pad" style="padding: 0px 30px 15px 30px;">
    <table width="100%" cellspacing="0" cellpadding="0" border="0"
      style="border: 1px solid #e0e0e0; border-radius: 8px;">
      <!-- Title -->
      <tr>
        <td style="padding: 20px 24px 0 24px;">
          <div style="font-size: 11px; font-weight: 600; letter-spacing: 1px; text-transform: uppercase; color: rgba(0,0,0,0.38);">
            {{t "emails.transfer_title"}}
          </div>
        </td>
      </tr>
      <!-- Description -->
      <tr>
        <td style="padding: 8px 24px 0 24px;">
          <div style="font-size: 16px; font-weight: 600; color: rgba(0,0,0,0.87); line-height: 1.4;">
            {{transfer.description}}
          </div>
        </td>
      </tr>
      <!-- Amount -->
      <tr>
        <td style="padding: 4px 24px 32px 24px;">
          <table width="100%" cellspacing="0" cellpadding="0" border="0">
            <tr>
              <td>
                <div style="font-size: 24px; font-weight: 400; color: {{transfer.amountColor}}; line-height: 1.3;">
                  {{transfer.amount}}
                </div>
              </td>
              {{#if transfer.otherAmount}}
              <td align="right" valign="bottom">
                <div style="font-size: 18px; font-weight: 400; color: rgba(0,0,0,0.38); line-height: 1.3;">
                  {{transfer.otherAmount}}
                </div>
              </td>
              {{/if}}
            </tr>
          </table>
        </td>
      </tr>
      <!-- Payer label -->
      <tr>
        <td style="padding: 0 24px;">
          <div style="font-size: 11px; font-weight: 600; letter-spacing: 1px; text-transform: uppercase; color: rgba(0,0,0,0.38); padding-left: 56px;">
            {{t "emails.transfer_from"}}
          </div>
        </td>
      </tr>
      <!-- Payer -->
      <tr>
        <td style="padding: 0 16px;">
          {{> transfer-member transfer.payer}}
        </td>
      </tr>
      <!-- Payee label -->
      <tr>
        <td style="padding: 8px 24px 0 24px;">
          <div style="font-size: 11px; font-weight: 600; letter-spacing: 1px; text-transform: uppercase; color: rgba(0,0,0,0.38); padding-left: 56px;">
            {{t "emails.transfer_to"}}
          </div>
        </td>
      </tr>
      <!-- Payee -->
      <tr>
        <td style="padding: 0 16px;">
          {{> transfer-member transfer.payee}}
        </td>
      </tr>
      <!-- Date and Status -->
      <tr>
        <td style="padding: 32px 24px 24px 24px;">
          <table width="100%" cellspacing="0" cellpadding="0" border="0">
            <tr>
              <td valign="middle">
                <span style="font-size: 14px; color: rgba(0,0,0,0.54);">
                  {{transfer.date}}
                </span>
              </td>
              <td align="right" valign="middle">
                <span style="display: inline-block; padding: 4px 12px; border-radius: 16px; font-size: 12px; font-weight: 600; letter-spacing: 0.06em; background-color: {{transfer.status.bgColor}}; color: {{transfer.status.color}};">
                  {{transfer.status.label}}
                </span>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>