<!-- Greeting and text body -->
<tr>
  <td class="mobile-pad" style="padding: 20px 30px 0px 30px;">
    <div style="font-size: 15px; line-height: 1.6;">
      {{#if greeting}}
      <p style="color: #333333; margin-top: 0;">{{greeting}}</p>
      {{/if}}
  
      {{#each paragraphs}}
      <p style="color: #555555;">{{{this}}}</p>
      {{/each}}
    </div>
  </td>
</tr>