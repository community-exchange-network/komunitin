<!-- CTA -->
<tr>
  <td style="padding: 15px 30px 25px 30px;">
    <div style="text-align: center;">
      <a href="{{appUrl}}/home"
        style="background-color: #72A310; color: #ffffff; padding: 14px 32px; text-decoration: none; border-radius: 8px; font-weight: 600; font-size: 14px; display: inline-block; text-transform: uppercase; letter-spacing: 0.5px;">
        {{t "newsletter.cta_main"}}
      </a>
    </div>
    <div style="text-align: center; margin-top: 18px;">
      <a href="{{appUrl}}/groups/{{group.code}}/offers/new"
        style="color: #72A310; font-size: 14px; font-weight: 600; text-decoration: none;">
        {{t "newsletter.cta_secondary"}}
      </a>
    </div>
  </td>
</tr>

<!-- My Account -->
<tr>
  <td class="mobile-pad" style="padding: 25px 30px 15px 30px;">
    <h3
      style="margin: 0 0 18px 0; color:#333; font-size: 18px; font-weight: 600; border-bottom: 1px solid #eeeeee; padding-bottom: 12px;">
      {{t "newsletter.account_title"}}
    </h3>
    <div style="background-color: #f3f8e5; border: 1px solid #c5e1a5; border-radius: 8px; padding: 22px;">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td class="dashboard-col" width="35%" style="vertical-align: middle;">
            <div
              style="font-size: 12px; text-transform: uppercase; color: #558b2f; font-weight: bold; letter-spacing: 1px;">
              {{t "newsletter.balance_label"}}
            </div>
            <div style="font-size: 32px; font-weight: 300; color: #33691e; margin-top: 5px;">
              {{formattedBalance}}</div>
          </td>
          <td class="dashboard-col" width="65%"
            style="vertical-align: middle; border-left: 1px solid #dcedc8; padding-left: 20px;">
            <div style="font-size: 14px; color: #558b2f; line-height: 1.4;">
              {{#if activitySummary}}
              <div style="margin-bottom: 6px; font-weight: 600;">{{activitySummary}}</div>
              {{/if}}
              {{balanceAdvice}}
              <div style="margin-top: 5px;">
                <a href="{{appUrl}}/groups/{{group.code}}/members/{{member.code}}/transactions"
                  style="color: #33691e; font-weight: bold; text-decoration: none; font-size: 12px;">
                  {{t "newsletter.view_movements"}}
                </a>
              </div>
            </div>
          </td>
        </tr>
      </table>
    </div>

    {{#if accountAlert}}
    <div
      style="margin-top: 18px; background-color: #fff8e1; border: 1px solid #ffecb3; border-radius: 8px; padding: 18px;">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td width="30" valign="top" style="font-size: 24px; line-height: 1;">‚ö†Ô∏è</td>
          <td valign="top" style="padding-left: 15px;">
            <div style="font-weight: 600; font-size: 15px; margin-bottom: 6px; color: #ef6c00;">{{accountAlert.title}}</div>
            <div style="font-size: 14px; color: #333; margin-bottom: 12px; line-height: 1.5;">{{accountAlert.text}}</div>
            <div>
              <a href="{{accountAlert.actionUrl}}"
                style="background-color: #ff8f00; color: #ffffff; padding: 10px 18px; text-decoration: none; border-radius: 6px; font-weight: 600; font-size: 13px; display: inline-block;">{{accountAlert.actionText}}</a>
            </div>
          </td>
        </tr>
      </table>
    </div>
    {{/if}}
  </td>
</tr>
<!-- Stats -->
<tr>
  <td class="mobile-pad" style="padding: 25px 30px; border-top: 1px solid #eeeeee;">
    <h3
      style="text-align: center; color: #757575; margin: 0 0 22px 0; font-size: 13px; font-weight: 600; text-transform: uppercase; letter-spacing: 1.5px;">
      {{t "newsletter.stats_title" group=group.name}}
    </h3>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        {{#if stats.exchanges}}
        <td align="center" style="padding: 8px;">
          <div style="color: #72A310; font-size: 36px; font-weight: 600;">{{stats.exchanges}}</div>
          <div
            style="color: #888888; font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px; margin-top: 4px;">
            {{t "newsletter.stats_exchanges"}}
          </div>
        </td>
        {{/if}}
        {{#if stats.activeAccounts}}
        <td align="center" style="{{#if stats.exchanges}}border-left: 1px solid #eeeeee;{{/if}} padding: 8px;">
          <div style="color: #72A310; font-size: 36px; font-weight: 600;">{{stats.activeAccounts}}</div>
          <div
            style="color: #888888; font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px; margin-top: 4px;">
            {{t "newsletter.stats_active_accounts"}}
          </div>
        </td>
        {{/if}}
        {{#if stats.newMembers}}
        <td align="center"
          style="{{#if stats.exchanges}}border-left: 1px solid #eeeeee;{{else}}{{#if stats.activeAccounts}}border-left: 1px solid #eeeeee;{{/if}}{{/if}} padding: 8px;">
          <div style="color: #72A310; font-size: 36px; font-weight: 600;">{{stats.newMembers}}</div>
          <div
            style="color: #888888; font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px; margin-top: 4px;">
            {{t "newsletter.stats_new_members"}}
          </div>
        </td>
        {{/if}}
      </tr>
    </table>
  </td>
</tr>
{{> footer reason=(t "newsletter.footer_reason" group=group.name appName=appName) settingsLabel=(t "newsletter.manage_subscription") unsubscribeLabel=(t "newsletter.unsubscribe")}}
{{/main}}