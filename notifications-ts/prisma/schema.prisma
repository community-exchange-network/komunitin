generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model NewsletterLog {
  id        String   @id @default(uuid())
  tenantId  String

  sentAt    DateTime @default(now())
  
  // Recipient details
  memberId  String
  recipients Json

  // Variable content snapshot (featured items, alerts triggered)
  content   Json

  @@index([memberId])
  @@index([tenantId])
  @@index([sentAt])
}

model AppNotification {
  id        String   @id @default(uuid())
  
  // Scoping
  tenantId  String
  userId    String
  
  // Origin
  eventId   String?
  eventName String
  
  // Content
  title     String
  body      String   @db.Text
  image     String?

  // Routing
  data      Json? 
  
  // State
  readAt    DateTime?
  createdAt DateTime @default(now())

  // Indexes
  @@index([tenantId, userId, createdAt]) // Main inbox query
  @@index([tenantId, userId, readAt])    // Unread count
}
