<table width="100%" cellspacing="0" cellpadding="0" border="0">
  <tr>
    <!-- Avatar -->
    <td width="48" valign="middle" aria-hidden="true" style="padding: 6px 4px 6px 8px;">
      {{#if image}}
      <img src="{{image}}" alt="" width="40" height="40"
        style="border-radius: 50%; display: block; background-color: #e0e0e0;">
      {{else}}
      <table width="40" height="40" cellpadding="0" cellspacing="0" border="0"
        style="border-radius: 50%; background-color: #72A310;">
        <tr>
          <td align="center" valign="middle"
            style="color: #ffffff; font-size: 18px; font-weight: bold; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">
            {{initial}}
          </td>
        </tr>
      </table>
      {{/if}}
    </td>
    <!-- Name and Code -->
    <td valign="middle" style="padding: 6px 8px 6px 4px;">
      <div style="font-size: 14px; font-weight: bold; color: rgba(0,0,0,0.6); line-height: 1.3;">
        {{name}}
      </div>
      <div style="font-size: 12px; color: rgba(0,0,0,0.38); line-height: 1.3;">
        {{code}}
      </div>
    </td>
    {{#if group}}
    <!-- Group (for external transfers) -->
    <td align="right" valign="middle" style="padding: 6px 8px;">
      <table cellspacing="0" cellpadding="0" border="0">
        <tr>
          <td valign="middle" style="padding-right: 8px;">
            <div style="font-size: 12px; color: rgba(0,0,0,0.38); text-align: right; line-height: 1.3;">
              {{group.name}}
            </div>
          </td>
          <td valign="middle" aria-hidden="true">
            {{#if group.image}}
            <img src="{{group.image}}" alt="" width="32" height="32"
              style="border-radius: 50%; display: block; background-color: #e0e0e0;">
            {{else}}
            <table width="32" height="32" cellpadding="0" cellspacing="0" border="0"
              style="border-radius: 50%; background-color: #72A310;">
              <tr>
                <td align="center" valign="middle"
                  style="color: #ffffff; font-size: 16px; font-weight: bold; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">
                  {{group.initial}}
                </td>
              </tr>
            </table>
            {{/if}}
          </td>
        </tr>
      </table>
    </td>
    {{/if}}
  </tr>
</table>
