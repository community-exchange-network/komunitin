{
  "compilerOptions": {
    // "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["quasar", "node", "jest"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "components/": ["src/components/"]
    }
  },
  "exclude": ["node_modules"]
}
