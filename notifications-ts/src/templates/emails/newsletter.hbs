{{#> main }}
{{> header }}

<!-- Greeting -->
<tr>
  <td class="mobile-pad" style="padding: 30px 30px 25px 30px;">
    <div style="font-size: 20px; color: #333; margin-bottom: 10px;">
    {{t "newsletter.hello" name=member.name}}
    </div>
    <div style="font-size: 15px; color: #666; line-height: 1.6;">
      {{t "newsletter.intro"}}
    </div>
  </td>
</tr>

<!-- Best Offers -->
{{#if bestOffers}}
<tr>
  <td class="mobile-pad" style="padding: 25px 30px 12px 30px;">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td style="font-size: 17px; font-weight: 600; color: #333;">{{t "newsletter.offers_header"}}</td>
        <td align="right"><a href="{{appUrl}}/groups/{{group.code}}/offers"
            style="font-size: 13px; color: #888888; text-decoration: none;">{{t
            "newsletter.all_offers"}} ‚Üí</a></td>
      </tr>
    </table>
  </td>
</tr>
<tr>
  <td class="mobile-pad" style="padding: 0 30px 25px 30px;">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        {{#each bestOffers}}
        <td class="column" width="32%"
          style="border: 1px solid #e8e8e8; border-radius: 8px; vertical-align: top; background-color: #ffffff; overflow: hidden;">
          <a href="{{link}}" style="display: block; text-decoration: none; color: inherit;">
            {{#if image}}
            <img class="card-image" src="{{image}}" alt="{{title}}" width="100%" height="120"
              style="display: block; border-radius: 8px 8px 0 0;" aria-hidden="true">
            {{/if}}
            <div style="padding: 14px;">
              <div
                style="color: #2f7989; font-size: 10px; font-weight: 600; letter-spacing: 0.5px; margin-bottom: 6px; text-transform: uppercase;">
                {{t "newsletter.section_offer"}}
              </div>
              <h4 style="margin: 0 0 6px 0; font-size: 15px; color: #333; font-weight: 600; line-height: 1.3;">{{title}}
              </h4>
              <p style="margin: 0; font-size: 13px; color: #666; line-height: 1.5;">{{description}}</p>
              <div style="margin-top: 10px; font-size: 12px; color: #999;">
                {{#if author.image}}
                <img src="{{author.image}}" width="16" height="16"
                  style="border-radius: 50%; vertical-align: middle; margin-right: 4px;" aria-hidden="true">
                {{else}}
                <span style="font-size: 14px; vertical-align: middle; margin-right: 2px;" aria-hidden="true">üë§</span>
                {{/if}}
                <span style="vertical-align: middle;">{{authorDisplayName}}</span>
                {{#if distanceLabel}}
                <span style="vertical-align: middle; margin: 0 3px;">¬∑</span>
                <span style="font-size: 14px; vertical-align: middle; color: #e53935;" aria-hidden="true">üìç</span> <span
                  style="vertical-align: middle;">{{distanceLabel}}</span>
                {{/if}}
              </div>
            </div>
          </a>
        </td>
        {{#unless @last}}<td class="spacer" width="2%">&nbsp;</td>{{/unless}}
        {{/each}}
      </tr>
    </table>
  </td>
</tr>
{{/if}}

